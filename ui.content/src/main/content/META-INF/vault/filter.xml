<?xml version="1.0" encoding="UTF-8"?>
<workspaceFilter version="1.0">
    <!-- Catalog Product Scaffolding -->
    <filter root="/apps/catalog/content"/>
    <!-- Catalog Editable Templates -->
    <filter root="/conf/catalog"/>
    <!-- Catalog Blue prints -->
    <filter root="/content/catalogs/catalog"/>
    <!-- Confirmation page and Properties node inside catalog/en -->
    <filter root="/content/catalog/en/">
        <exclude pattern="/content/catalog/en/fiction"/>
        <exclude pattern="/content/catalog/en/biography"/>
        <exclude pattern="/content/catalog/en/science"/>
    </filter>
    <!-- Catalog Tags Folder -->
    <filter root="/content/cq:tags/catalog"/>
    <!-- Dam images -->
    <filter root="/content/dam/catalogs/catalog"/>
    <!-- Catalog Users -->
    <filter root="/home/users/catalog"/>
    <!-- Catalog e-commerce Products -->
    <filter root="/var/commerce/products/catalog"/>
    <!-- Design Page-->
    <filter root="/etc/designs/catalog-design"/>
    <filter root="/etc/workflow/models/content-approval-workflow"/>
</workspaceFilter>
