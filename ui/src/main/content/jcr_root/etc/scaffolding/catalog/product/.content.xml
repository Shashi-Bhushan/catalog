<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Page">
    <!--
        To Create Scaffold in AEM
        - Open Miscadmin
        - Create Scaffold page under /etc/scaffolding
        - Open the page and Edit the dialog inside the page
        - Open page properties via Site-kick
        - Add Target path
    -->
    <jcr:content
            cq:targetPath="/etc/commerce/products/catalog"
            jcr:description="Scaffolding Used to create Catalog Data"
            jcr:primaryType="cq:PageContent"
            jcr:title="Catalog Product"
            sling:resourceType="wcm/scaffolding/components/scaffolding">
        <cq:dialog
            jcr:primaryType="nt:unstructured"
            jcr:title="Geometrixx Outdoors Product Properties"
            sling:resourceType="cq/gui/components/authoring/dialog">
            <content
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column1
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <images
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="commerce/gui/components/admin/products/images">
                                        <image
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="commerce/gui/components/admin/products/images/image"
                                            var="${imageRelPath}">
                                            <thumbnail
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="commerce/gui/components/admin/products/properties/productthumbnail"
                                                class="cq-ProductThumbnail">
                                                <assetcategory
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/common/tagspicker"
                                                    allowCreate="{Boolean}true"
                                                    fieldLabel="Asset Category"
                                                    name="./${imageRelPath}/assetCategory"
                                                    rel="cq-commerce-product-image-category"
                                                    renderReadOnly="{Boolean}true"/>
                                                <assetpicker
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="commerce/gui/components/common/assetpicker"
                                                    fieldLabel="Asset Path"
                                                    name="./${imageRelPath}/${imagePropName}"
                                                    previewTarget=".cq-ProductThumbnail"
                                                    renderReadOnly="{Boolean}true"/>
                                                <remove
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/submit"
                                                    align="right"
                                                    class="button remove-image-button"
                                                    text="Remove"
                                                    type="image"/>
                                            </thumbnail>
                                        </image>
                                        <addimage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/submit"
                                            align="right"
                                            class="button add-image-button"
                                            text="Add Asset"
                                            type="image"/>
                                    </images>
                                </items>
                            </column1>
                            <column2
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <tabs
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <layout
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                                            type="nav"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <basic
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Basic"
                                                sling:resourceType="granite/ui/components/foundation/section">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <titles
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <title
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                fieldLabel="Title *"
                                                                name="./jcr:title"
                                                                renderReadOnly="{Boolean}true"
                                                                required="{Boolean}true"/>
                                                            <description
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                                                fieldLabel="Description"
                                                                name="./jcr:description"
                                                                renderReadOnly="{Boolean}true"/>
                                                            <tags
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/common/tagspicker"
                                                                fieldLabel="Tags"
                                                                name="./cq:tags"
                                                                renderReadOnly="{Boolean}true"/>
                                                            <product-asset-category-default
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/common/tagspicker"
                                                                fieldLabel="Default Asset Category"
                                                                name="./assetCategory"
                                                                renderReadOnly="{Boolean}true"/>
                                                            <charset
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                                ignoreData="{Boolean}true"
                                                                name="_charset_"
                                                                value="utf-8"/>
                                                        </items>
                                                    </titles>
                                                    <erp
                                                        jcr:primaryType="nt:unstructured"
                                                        jcr:title="ERP Data"
                                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <sku
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                fieldLabel="SKU *"
                                                                name="./identifier"
                                                                renderReadOnly="{Boolean}true"
                                                                required="{Boolean}true"
                                                                validation="geometrixx.sku"/>
                                                            <color
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                fieldLabel="Color"
                                                                name="./color"
                                                                renderReadOnly="{Boolean}true"/>
                                                            <size
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                fieldLabel="Size"
                                                                name="./size"
                                                                renderReadOnly="{Boolean}true"/>
                                                            <price
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                                                fieldLabel="Price"
                                                                name="./price"
                                                                renderReadOnly="{Boolean}true"/>
                                                        </items>
                                                    </erp>
                                                </items>
                                            </basic>
                                            <product-tabs
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Product Tabs"
                                                sling:resourceType="granite/ui/components/foundation/section">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <clientlibs
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/includeclientlibs"
                                                        categories="[cq.authoring.dialog]"/>
                                                    <summary
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                        fieldLabel="Summary"
                                                        name="./summary"
                                                        renderReadOnly="{Boolean}true"/>
                                                    <features
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                        fieldLabel="Features"
                                                        name="./features"
                                                        renderReadOnly="{Boolean}true"/>
                                                </items>
                                            </product-tabs>
                                        </items>
                                    </tabs>
                                </items>
                            </column2>
                        </items>
                    </columns>
                </items>
            </content>
        </cq:dialog>
        <dialog/>
    </jcr:content>
</jcr:root>
